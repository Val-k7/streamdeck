{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profile",
  "type": "object",
  "required": ["id", "name", "rows", "cols", "controls"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "rows": { "type": "integer", "minimum": 1 },
    "cols": { "type": "integer", "minimum": 1 },
    "version": { "type": "integer" },
    "checksum": { "type": "string" },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "row", "col"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "row": { "type": "integer" },
          "col": { "type": "integer" },
          "rowSpan": { "type": "integer", "minimum": 1 },
          "colSpan": { "type": "integer", "minimum": 1 },
          "label": { "type": "string" },
          "colorHex": { "type": "string" },
          "action": { "type": "object" }
        }
      }
    }
  }
}
