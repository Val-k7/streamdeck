{
  "name": "android-control-deck-server",
  "version": "0.1.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "node ./tests/run-tests.js || echo 'tests placeholder'",
    "setup": "node tools/setup.js",
