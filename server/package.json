{
  "name": "control-deck-server",
  "version": "1.0.0",
  "description": "Control Deck Server - Serveur Windows autonome pour Control Deck",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node scripts/kill-port.js && node index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "setup": "node tools/setup.js",
    "package": "pkg .",
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js --production",
    "build:clean": "node scripts/build.js --clean",
    "health": "node scripts/health-check.js",
    "health:remote": "node scripts/health-check.js --url=http://your-server:4455",
    "install:windows": "powershell -ExecutionPolicy Bypass -File scripts/install-windows.ps1",
    "install:server": "powershell -ExecutionPolicy Bypass -File scripts/install-windows.ps1 || bash scripts/install.sh || scripts/install.sh",
    "update:server": "bash scripts/update.sh || scripts/update.sh",
    "backup": "bash scripts/backup.sh || scripts/backup.sh",
    "clean": "bash scripts/clean.sh || scripts/clean.sh",
    "validate": "node scripts/validate-config.js",
    "check-deps": "node scripts/check-dependencies.js",
    "setup-dev": "bash scripts/setup-dev.sh || scripts/setup-dev.sh",
    "test-connection": "node scripts/test-connection.js",
    "check-ports": "bash scripts/check-ports.sh || scripts/check-ports.sh",
    "migrate": "powershell -ExecutionPolicy Bypass -File scripts/migrate-data.ps1"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "actions/**/*",
      "python/**/*"
    ],
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "express-rate-limit": "^7.4.1",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "bonjour": "^3.5.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [".js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "utils/**/*.js",
      "actions/**/*.js",
      "plugins/**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
